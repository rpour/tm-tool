{% extends 'TmtCoreBundle:Template:index.html.twig' %}

{% block css %}
    <link rel="stylesheet" href="{{ asset('bundles/tmtcore/css/screen.css') }}">
    <link rel="stylesheet" href="http://i.icomoon.io/public/temp/42fc0e7cae/tm-tool11/style.css">
{% endblock %}

{% block body %}
<div class="page-body">
    <div class="login">
        {% if  app.user.username is defined %}
        {{ app.user.username }}
        <a href="{{ path('tmt_logout') }}">
            <span class="icon-power-off"></span>
        </a>
        {% else %}
        <form action="{{ path('tmt_login_check') }}" method="post">
            <span class="icon-user"></span>
            <input type="text" name="_username" value="" />

            <span class="icon-key"></span>
            <input type="password" name="_password" />
            <input type="hidden" name="_target_path" value="{{ app.request.uri }}" />

            <button type="submit">login</button>
        </form>
        {% endif %}
    </div>
    <header>
        {% block header %}{% endblock %}
    </header>
    <nav>
        {% block breadcrumb %}
        {% include 'TmtCoreBundle:Template:breadcrumb.html.twig' %}
        {% endblock %}
    </nav>
    <nav class="menu">
        {% block menubar %}
        {% include 'TmtCoreBundle:Template:menubar.html.twig' %}
        {% endblock %}
    </nav>
    <div class="content">{% block content %}{% endblock %}</div>
    <footer>
        {% block footer %}{% endblock %}
    </footer>
</div>
{% endblock %}

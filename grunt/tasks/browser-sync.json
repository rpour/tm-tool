{
    "dev": {
        "bsFiles": {
            "src": [
                "<%= symfony.web %>/**/*.css",
                "<%= symfony.web %>/**/*.jpg",
                "<%= symfony.web %>/**/*.png",
                "<%= symfony.web %>/**/*.js",
                "<%= symfony.web %>/**/*.html.twig"
            ]
        },
        "options": {
            "watchTask": true
        }
    },
    "options": {
        "debugInfo": true,
        "ghostMode": {
            "clicks": true,
            "forms": true,
            "links": true,
            "scroll": true
        },
        "proxy": {
            "ports": {
                "max": 6100,
                "min": 6000
            }
        }
    },
    "test": {
        "bsFiles": {
            "src": [
                "<%= symfony.web %>/**/*.css"
            ]
        },
        "options": {
            "watchTask": false
        }
    }
}
{
    "compass": {
        "files": [
            "<%= project_source %>/src/**/*.scss"
        ],
        "tasks": [
            "compass",
            "autoprefixer"
        ]
    },
    "jshint": {
        "files": [
            "<%= project_source %>/src/**/*.js"
        ],
        "tasks": [
            "jshint",
            "files_check:scripts"
        ]
    },
    "phplint": {
        "files": [
            "<%= project_source %>/src/**/*.php"
        ],
        "tasks": [
            "phplint",
            "phpmd",
            "phpcs"
        ]
    },
    "reload": {
        "files": [
            "<%= project_source %>/src/**/*.html*",
            "<%= project_source %>/src/**/*.png",
            "<%= project_source %>/src/**/*.jpg",
            "<%= project_source %>/src/**/*.js"
        ],
        "options": {
            "livereload": 9000
        }
    },
    "reload-styles": {
        "files": [
            "<%= project_source %>/src/**/*.css"
        ],
        "options": {
            "livereload": 9000
        }
    },
    "templates": {
        "files": [
            "<%= project_source %>/src/**/*.html*"
        ],
        "tasks": [
            "files_check:templates"
        ]
    }
}